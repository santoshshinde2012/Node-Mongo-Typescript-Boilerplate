{
    "compilerOptions": {
        "module": "commonjs",
        "moduleResolution": "node",
        "pretty": true,
        "target": "es6",
        "sourceMap": false,
        "noImplicitAny": true,
        "removeComments": true,
        "preserveConstEnums": true,
        "outDir": "./dist",
        "baseUrl": "./src"
    },
    "include": [
        "src/**/*.ts", 
        "tests/**/*.spec.ts", "Server.ts", "App.ts"
    ],
    "exclude": [
        "node_modules"
    ]
}
